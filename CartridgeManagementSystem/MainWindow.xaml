<Window x:Class="CartridgeManagementSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CartridgeManagementSystem"
        mc:Ignorable="d"
        Title="MainWindow" Height="430" Width="500">
    <Grid>
        <StackPanel>
            <TextBlock Text="Авторизация" FontSize="30" HorizontalAlignment="Center" Margin="0 0 0 40"></TextBlock>
            <TextBlock Text="Логин" FontSize="20" HorizontalAlignment="Left"></TextBlock>
            <TextBox Name="Login" Height="25" FontSize="20" Margin="0 0 0 30"></TextBox>
            <TextBlock Text="Пароль" FontSize="20" HorizontalAlignment="Left"></TextBlock>
            <PasswordBox Name="Pass" Height="25" FontSize="20" Margin="0 0 0 30"></PasswordBox>
            <Button Height="30" Content="Войти" FontSize="20" Margin="0 0 0 20" Name="VxodUser" Click="VxodUser_Click"></Button>
            <Button Height="30" Content="Войти как гость" FontSize="20" Name="VxodGuest" Click="VxodGuest_Click"></Button>

        </StackPanel>
    </Grid>
</Window>
